<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="420dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/light_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan Extra Books"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_marginBottom="2dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/horizontal_line"
            android:backgroundTint="@color/grey"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/outlined_white_bg"
                android:hint="Enter ISBN"
                android:padding="10dp"
                android:layout_toStartOf="@+id/camBtn"
                android:layout_alignParentStart="true"
                />

            <ImageButton
                android:id="@+id/camBtn"
                android:layout_width="45dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/camera_icon"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_blue"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sr"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ISBN"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:textStyle="bold"/>

        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="70">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewOrder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp" />

        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_cardview"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/red"
            android:layout_marginTop="10dp"
            android:text="SCAN BOOKS"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_cardview"
            android:layout_marginTop="10dp"
            android:text="SKIP"
            android:textSize="20sp"
            android:textColor="@color/dark_blue"/>

    </LinearLayout>
</RelativeLayout>