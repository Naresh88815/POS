<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey" >

    <RelativeLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@color/dark_yellow"
        android:orientation="horizontal"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/arrow_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Books"
                android:textColor="@color/dark_blue"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons_ltb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/btn_bg"
            android:padding="1dp"
            android:gravity="right"
            android:layout_alignParentEnd="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="LTB Bangalore"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/yellow"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAllCaps="false"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/drop_down"
                android:background="@color/yellow"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_below="@id/heading"
       >

        <RelativeLayout
            android:id="@+id/enter_isbn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/corner_cardview"
                android:hint="LTB Banglore"
                android:textColorHint="@color/dark_blue"
                android:padding="10dp" />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/drop_down" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/corner_cardview"
                android:hint="Select Vendor"
                android:textColorHint="@color/dark_blue"
                android:padding="10dp" />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/drop_down" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:text="Books"
                android:background="@drawable/corner_cardview"
                android:textColor="@color/white"
                android:padding="10dp"
                android:backgroundTint="@color/dark_blue"
                android:layout_alignParentStart="true"
                android:textAllCaps="false"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:text="Book Set"
                android:background="@drawable/corner_cardview"
                android:textColor="@color/dark_blue"
                android:padding="10dp"
                android:backgroundTint="@color/white"
                android:layout_centerInParent="true"
                android:textAllCaps="false"/>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:text="Merchandise"
                android:textSize="16dp"
                android:background="@drawable/corner_cardview"
                android:textColor="@color/dark_blue"
                android:padding="10dp"
                android:backgroundTint="@color/white"
                android:layout_alignParentEnd="true"
                android:textAllCaps="false"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/corner_cardview"
            android:backgroundTint="@color/red"
            android:text="ADD BOOK"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </LinearLayout>



</RelativeLayout>
